<%=form_for book,html: { class: "table-bordered" } do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title ,class:"form-control"%>
  </div>
  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.attachment_field :image,class:"form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author,class:"form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :evaluation %>
    <%= f.radio_button :evaluation, :poor %>
    <%= f.radio_button :evaluation, :bad %>
    <%= f.radio_button :evaluation, :good %>
    <%= f.radio_button :evaluation, :very_good %>
    <%= f.radio_button :evaluation, :excellent %>　
    <!--ここをgemとjavascriptで実装 -->
  </div>
  
  <div class="form-group">
    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "　　--選択してください--" %>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-primary"'%>
  </div>
<% end %>