<%=form_for(book) do |f| %>

  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :image %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body%>
  </div>
  
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  
  <div class="field">
    <%= f.label :evaluation %>
    <%= f.radio_button :evaluation, :poor %>
    <%= f.radio_button :evaluation, :bad %>
    <%= f.radio_button :evaluation, :good %>
    <%= f.radio_button :evaluation, :very_good %>
    <%= f.radio_button :evaluation, :excellent %>　
    <!--ここをgemとjavascriptで実装 -->
  </div>
  
  <div class="field">
    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "　　--選択してください--" %>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-primary"'%>
  </div>
<% end %>