<tbody>
  <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40') %><br>
          <%= book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book %>
      </td>
      <td>
        <%= simple_format(book.body) %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= book.evaluation %>
      </td>
      <td>
        コメント数: <%= book.book_comments.count %>
      </td>
      <td>
        <div id="favorite_<%= book.id %>">
          <%= render "users/favorites/favorite", book: book %>
        </div>
    </td>
    </tr>
  <% end %>
</tbody>