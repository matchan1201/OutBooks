<h2>Book detail</h2>
<table class="table table-hover">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img" %><br>
        <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
        <%= @book.author %>
      </td>
      <td>
        <%= @book.evaluation %>
        <% if @book.user == current_user %>
      <td><%= link_to "Edit",edit_book_path(@book), class: "btn btn-success" %></td>
      <% end %>
      <% if @book.user == current_user %>
      <td><%= link_to 'Destroy', book_path(@book),method: :delete,class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>