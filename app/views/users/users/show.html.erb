<table class='table table-hover table-inverse' style="margin-top: 100px;">
  <thead>
    <tr>
      <th>image</th>
      <th>user</th>
      <th>Title</th>
      <th>body</th>
      <th>auther</th>
      <th>evaluation</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>

    <tr>
      <td>
        <%= attachment_image_tag book, :image, :fill, 30,20, format: 'jpeg' %>
      <td>
        <%= book.user.name %>
      </td>
      <td><%= link_to book.title, book %></td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= book.evaluation %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>