<div style="margin-top: 200px;">
  <%= form_with model: @genre, url: admins_genres_path do |f| %>
  <div class="field">
    <%= f.label :name, "ジャンル" %>
    <%= f.text_field :name %>
    <%= f.submit "追加", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", class: "btn btn-primary" %></td>
      <td><%= link_to "削除する", admins_genre_path(genre),method: :delete,class: "btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>